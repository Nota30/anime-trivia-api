{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "declaration": true,
      "suppressImplicitAnyIndexErrors": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2017", "DOM"],
      "outDir": "./lib" ,
      "experimentalDecorators": true,
      "resolveJsonModule": true
    },
    "exclude": ["lib", "node_modules"],
    "include": ["src/**/*"],
}